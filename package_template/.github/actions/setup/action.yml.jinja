---
name: Setup Action
description: Install uv, configure Python, and install package dependencies

inputs:
  os:
    default: ubuntu-latest
  pipx-packages:
    description: (Deprecated) Use tool-packages instead. Space-separated list of tools to install
    default: ""
  tool-packages:
    description: Space-separated list of tools to install with uv tool
    default: ""
  python-version:
    required: true
  uv-version:
    description: Version of uv to install
    default: latest

runs:{% raw %}
  using: composite
  steps:
    - name: Setup uv and Python ${{ inputs.python-version }}
      uses: astral-sh/setup-uv@v7
      with:
        python-version: ${{ inputs.python-version }}
        uv-version: ${{ inputs.uv-version }}
        cache-dependency-glob: "**/uv.lock"
        enable-cache: true

    - name: Install tool packages
      if: inputs.tool-packages != '' || inputs.pipx-packages != ''
      run: |
        # Support both tool-packages (new) and pipx-packages (deprecated)
        packages="${{ inputs.tool-packages }} ${{ inputs.pipx-packages }}"
        for tool in $packages; do
          # Trim whitespace and skip empty entries
          tool=$(echo "$tool" | xargs)
          if [ -n "$tool" ]; then
            uv tool install $tool
          fi
        done
      shell: bash

    - name: Debug tools
      if: inputs.tool-packages != '' || inputs.pipx-packages != ''
      run: |
        uv tool list
      shell: bash

    - name: Install Project and Dependencies{% endraw %}
      run: |
        uv sync && uv run calcipy-pack pack.install-extras
      shell: bash
